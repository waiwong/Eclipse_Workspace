<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServletExample</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>log4j2-config-location</param-name>
    <param-value>WEB-INF/log4j2.xml</param-value>
  </context-param>
  <listener>
    <listener-class>onlineBookstrore.util.log.ContextListener4Log</listener-class>
  </listener>
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>servlets.example.HelloWorld</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowBrowser Servlet</servlet-name>
    <servlet-class>servlets.example.ShowBrowserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowBrowser Servlet</servlet-name>
    <url-pattern>/ShowBrowserClient/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Schedule</servlet-name>
    <servlet-class>servlets.example.schedule.ScheduleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Schedule</servlet-name>
    <url-pattern>/Schedule</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login-servlet</servlet-name>
    <servlet-class>servlets.example.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login-servlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EBookShopQuery</servlet-name>
    <servlet-class>servlets.example.QueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EBookShopQuery</servlet-name>
    <url-pattern>/ebookshopquery</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EchoServletExample</servlet-name>
    <servlet-class>servlets.example.EchoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EchoServletExample</servlet-name>
    <url-pattern>/echoservlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>servlets.example2.ControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/shopping</url-pattern>
  </servlet-mapping>
</web-app>